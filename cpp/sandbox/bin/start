#!/bin/bash

app_dir=$(realpath "$(dirname "$0")/../../")
fmt_bold="\033[1m"
fmt_cyan="\033[36m"
fmt_normal="\033[10m"
fmt_red="\033[31m"
fmt_reset="\033[0m"
fmt_yellow="\033[33m"
project=$(dirname "$0" | xargs basename)

# shellcheck disable=1090
source "$app_dir/bin/utils" # extract_flags, to_lower, to_upper

flags=($(extract_flags "${@}"))

if [[ $project = "bin" ]]; then
  cmd=$(basename "$0")

  echo -e "${fmt_bold}${fmt_red}Please run in the context of" \
  "a project (e.g. ./bin/<project>/$cmd)${fmt_reset}"

  exit 1;
fi

shopt -s extglob
echo -e "${fmt_bold}${fmt_cyan}"
date

function symbol_start() {
  log_dir="$app_dir/log/$project"
  symbol=$(to_upper "$1")

  mkdir -p "$log_dir"

  log_file="$log_dir/$symbol.log"

  echo -e "${fmt_bold}${fmt_yellow}"
  echo -e "Starting TaoBot for ${fmt_normal}${fmt_cyan}$symbol"
  echo "" > "$log_file"

  "$app_dir/build/$project" tao_bot "${symbol}" "${flags[@]}" >> "$log_file" 2>&1 &
}

if [[ "$*" =~ .*--clear-performance.* ]]
then
  symbol="$(to_upper "$1")"
  "$app_dir/bin/$project/clear_performance" "$symbol"
fi

case $1 in
  +([[:alpha:]]))
    symbol_start "$1"
    ;;

  +([[:alpha:]_[:alpha:]]))
    symbol_start "$1"
    ;;

  *)
    symbols=()
    while IFS="" read -r line; do symbols+=("$line"); done < <(cat "$app_dir/bin/$project/symbols")

    for symbol in "${symbols[@]}"
    do
      symbol_start "$symbol"
    done
    ;;
esac

printf "%b" "$fmt_reset"
