#!/bin/bash


app_dir="$(realpath "$(dirname "$0")/../")"
fmt_bold="\033[1m"
fmt_cyan="\033[36m"
fmt_reset="\033[0m"
fmt_yellow="\033[33m"
project=$(dirname "$0" | xargs basename)

function build_project() {
  project="$1"

  echo -e "${fmt_bold}${fmt_cyan}ðŸ”¨ Building: ${fmt_yellow}${project^}${fmt_reset}"

  mkdir -p "$app_dir/build/"

  g++ \
    -D"APP_DIR=\"$app_dir\"" \
    -iquote"$app_dir" \
    -iquote"$app_dir/src" \
    -std=c++17 \
    -o "$app_dir/build/$project" \
    "$app_dir/src/$project/$project.cpp" \
    -lcurl
}

if [[ $project = "bin" ]]
then
  app_dir="$(realpath "$(dirname "$0")/../")"
  projects=("alpaca" "oanda")

  for project in "${projects[@]}"
  do
    build_project "$project"
  done
else
  app_dir="$(realpath "$(dirname "$0")/../../")"
  build_project "$project"
fi
