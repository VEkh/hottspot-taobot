#!/bin/bash

data_dir=$(realpath "$(dirname "$0")/../../data/")
fmt_bold="\033[1m"
fmt_reset="\033[0m"
fmt_yellow="\033[33m"
project_name=$(dirname "$0" | xargs basename)
symbol="${1^^}"

performance_dir="$data_dir/$project_name/performance"

mkdir -p "$performance_dir"

echo "{}" > "$performance_dir/$symbol.json"
echo -e "\n${fmt_bold}${fmt_yellow}Cleared $symbol's performance${fmt_reset}\n"
