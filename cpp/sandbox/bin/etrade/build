#! /bin/bash

app_dir="$(realpath "$(dirname "$0")/../../")"
fmt_bold="\033[1m"
fmt_cyan="\033[36m"
fmt_reset="\033[0m"
fmt_yellow="\033[33m"
ruby_path=$(which ruby)
rubygems_dir=$(gem environment gemdir)
src="etrade"

echo -e "${fmt_bold}${fmt_cyan}ðŸ”¨ Building: ${fmt_yellow}ETrade${fmt_reset}"

mkdir -p "$app_dir/build/"

g++ \
  -D"APP_DIR=\"$app_dir\"" \
  -D"RUBY_PATH=\"$ruby_path\"" \
  -D"RUBYGEMS_DIR=\"$rubygems_dir\"" \
  -iquote"$app_dir" \
  -iquote"$app_dir/src" \
  -std=c++17 \
  -o "$app_dir/build/$src" \
  "$app_dir/src/$src/$src.cpp" \
  -lcrypto \
  -lcurl
