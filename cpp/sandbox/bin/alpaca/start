#!/bin/bash

app_dir=$(realpath "$(dirname "$0")/../../")
args=($@)
fmt_bold="\033[1m"
fmt_cyan="\033[36m"
fmt_normal="\033[10m"
fmt_reset="\033[0m"
fmt_yellow="\033[33m"
project=$(dirname "$0" | xargs basename)

shopt -s extglob
echo -e "${fmt_bold}${fmt_cyan}"
date

function symbol_start() {
  log_dir="$app_dir/log/$project"
  symbol="${1^^}"

  mkdir -p "$log_dir"

  log_file="$log_dir/$symbol.log"

  echo -e "${fmt_bold}${fmt_yellow}"
  echo -e "Starting TaoBot for ${fmt_normal}${fmt_cyan}$symbol"
  echo "" > "$log_file"

  tao_bot_args=($symbol)

  for arg in "${args[@]}"; do
    [[ ! ${arg,,} =~ ^(${symbol,,})$ ]] && tao_bot_args+=($arg)
  done

  "$app_dir/build/$project" tao_bot "${tao_bot_args[@]}" >> "$log_file" 2>&1 &
}

case $1 in
  +([[:alpha:]]))
    symbol_start "$1"
    ;;

  *)
    symbols=(
      "AAPL"
      "AMD"
      "FB"
      "IWM"
      "MSFT"
      "NVDA"
      "QQQ"
      "SNAP"
      "SPY"
      "TSLA"
    )

    for symbol in "${symbols[@]}"
    do
      symbol_start "$symbol"
    done
    ;;
esac

printf "%b" "$fmt_reset"
