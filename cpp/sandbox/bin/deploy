#!/bin/bash
# shellcheck disable=2029

fmt_bold="\033[1m"
fmt_cyan="\033[36m"
fmt_green="\033[32m"
fmt_reset="\033[0m"
fmt_yellow="\033[33m"

build_app_dir="$(realpath "$(dirname "$0")/../")"

echo -e "${fmt_bold}${fmt_yellow}Who is the remote server userğŸ‘¨ğŸ¾? (Default: '$(whoami)')"
read -r remote_user
remote_user=${remote_user:-$(whoami)}

echo -e "${fmt_bold}${fmt_yellow}What is the remote server host ğŸ“¬? (e.g. 192.x.x.x, example.com) (Default: '$HOTTSPOT_CAPITAL_REMOTE_HOST')"
read -r remote_host
remote_host=${remote_host:-$HOTTSPOT_CAPITAL_REMOTE_HOST}
echo -e "${fmt_reset}"

remote_address="${remote_user}@${remote_host}"
remote_app_dir="/home/$remote_user/apps/hottspot_capital"

function copy_files() {
  deploy_entities=(
    ".tool-versions"
    "Gemfile"
    "Gemfile.lock"
    "bin/"
    "config/"
    "deps/"
    "src/"
  )

  echo -e "${fmt_bold}${fmt_cyan}ğŸ“‹ Copying files ${fmt_reset}"

  rsync -arv --delete -e ssh --exclude='*.sw[nop]' \
    --files-from=<( printf "%s\n" "${deploy_entities[@]}" ) \
    "$build_app_dir/" \
    "$remote_address:$remote_app_dir/"
}

function create_directory() {
  echo -e "${fmt_bold}${fmt_cyan}ğŸ“‚ Creating app directory${fmt_reset}"

  ssh "$remote_address" \
    "mkdir -p $remote_app_dir && mkdir -p $remote_app_dir/log"
  echo
}

function install_dependencies() {
  echo -e "${fmt_bold}${fmt_cyan}ğŸ“¦ Installing dependencies${fmt_reset}"

  scp "$build_app_dir/bin/install_dependencies" \
    "$remote_address:/tmp/" && \
    ssh -t "$remote_address" \
      "/tmp/install_dependencies --server && rm /tmp/install_dependencies"
}

function install_ruby_dependencies() {
  ssh "$remote_address" "cd $remote_app_dir && bundle install"
}

function remote_build() {
  ssh "$remote_address" "cd $remote_app_dir && ./bin/build"
}

function update_crontab() {
  echo -e "${fmt_bold}${fmt_cyan}â° Updating crontab${fmt_reset}"

  cmd="(crontab -l 2>/dev/null; "
  cmd+="$remote_app_dir/bin/alpaca/cron generate 2>/dev/null; "
  cmd+="$remote_app_dir/bin/oanda/cron generate 2>/dev/null) "
  cmd+="| grep -v '^#' | grep -v 'no crontab' | sort -u | crontab -"

  ssh "$remote_address" "$cmd"
}

install_dependencies
create_directory
copy_files
install_ruby_dependencies
remote_build
update_crontab

echo -e "${fmt_bold}${fmt_green}ğŸš€ Successfully deployed Hottspot Capital!${fmt_reset}"
