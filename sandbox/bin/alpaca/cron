#!/bin/bash
app_dir=$(realpath "$(dirname "${BASH_SOURCE[0]}")/../../")
project=$(dirname "${BASH_SOURCE[0]}" | xargs basename)

# shellcheck disable=1090,1091
source "${app_dir}/bin/utils" # get_env_flag

env=$(get_env_flag "${@}")

case "${1}" in
  "generate")
    cmd="* 8-14 * * 1-5 ${app_dir}/bin/${project}/heartbeat --api-key=paper-alpha --env=${env} >> ${app_dir}/log/${env}.log 2>&1"
    cmd+="\n* 8-14 * * 1-5 ${app_dir}/bin/${project}/stream_account heartbeat --api-key=paper-alpha --env=${env} >> ${app_dir}/log/${env}.log 2>&1"
    cmd+="\n0 15 * * 1-5 ${app_dir}/bin/${project}/stream_account stop --api-key=paper-alpha >> ${app_dir}/log/${env}.log 2>&1"
    cmd+="\n* 8-14 * * 1-5 ${app_dir}/bin/${project}/quotes stream restart --api-key=live-alpha --env=${env} >> ${app_dir}/log/${env}.log 2>&1"
    cmd+="\n* 8-14 * * 1-5 ${app_dir}/bin/${project}/quotes watch restart --api-key=live-alpha --env=${env} >> ${app_dir}/log/${env}.log 2>&1"
    cmd+="\n* 8-14 * * 1-5 ${app_dir}/bin/${project}/candle_predict build_candles_each --duration-min=1 --env=${env} >> ${app_dir}/log/${env}.log 2>&1"
    cmd+="\n0 15 * * 1-5 ${app_dir}/bin/${project}/price_action build_each --env=${env} >> ${app_dir}/log/${env}.log 2>&1"

    echo -e "$cmd"
  ;;
esac
