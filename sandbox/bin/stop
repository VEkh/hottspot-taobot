#!/bin/bash
# shellcheck disable=2009

set -e
shopt -s extglob

api_name=$(dirname "${BASH_SOURCE[0]}" | xargs basename)
[[ "${api_name}" = "bin" ]] && rel_path="/../" || rel_path="/../../"
app_dir=$(realpath "$(dirname "${BASH_SOURCE[0]}")${rel_path}")

# ascii_print
# extract_flags
# to_lower
# to_upper
# validate_api_scope

# shellcheck disable=1090,1091
source "${app_dir}/bin/utils"

validate_api_scope "${api_name}"

# shellcheck disable=2207
flags=($(extract_flags "${@}"))
declare -A flag_map
extract_flags_to_map flag_map "${flags[@]}"

api_key="${flag_map["api-key"]}"

if [[ -z "${api_key}" ]]; then
  ascii_print "You must provide an --api-key=<API_KEY> option" "red" >&2
  exit 1
fi

case "${1}" in
  +([[:alpha:]_[:alpha:]]))
    symbol="$(to_upper "${1}")"

    state=$(
      ps aux |
      grep "[t]ao_bot" |
      grep "${api_name}" |
      grep -i "$(to_lower "${symbol}")" |
      grep -- "--api-key=.*${api_key}\(\s\|\$\)" ||
      true
    )

    if [[ -z "${state}" ]]; then
      ascii_print "âœ… TaoBot is not running for ${symbol}" "green"
    else
      ascii_print "ðŸ›‘ Stopping TaoBot for ${symbol}" "cyan"

      echo -e "${state}" | awk '{print $2}' | xargs kill
    fi

    ;;

  *)
    state=$(
      ps aux |
      grep "[t]ao_bot" |
      grep "${api_name}" |
      grep -- "--api-key=.*${api_key}\(\s\|\$\)" ||
      true
    )

    if [[ -z "${state}" ]]; then
      ascii_print "âœ… No TaoBot instances are running" "green"
    else
      ascii_print "ðŸ›‘ Stopping all TaoBot instances" "cyan"

      echo -e "${state}" | awk '{print $2}' | xargs kill
    fi
    ;;
esac
echo

printf "%b" "${ASCII["reset"]}"
